<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/leftSidebar">
        <Button
            android:layout_width="96dp"
            android:layout_height="192dp"
            android:text="Vol +"
            android:id="@+id/bt_VolUp"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Mute"
            android:id="@+id/bt_Mute"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="192dp"
            android:text="Vol -"
            android:id="@+id/bt_VolDown"
            android:onClick="RemoteButtonClick"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/leftSidebar"
        android:padding="32dp"
        android:columnCount="3">
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="1"
            android:id="@+id/bt_1"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="2"
            android:id="@+id/bt_2"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="3"
            android:id="@+id/bt_3"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="4"
            android:id="@+id/bt_4"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="5"
            android:id="@+id/bt_5"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="6"
            android:id="@+id/bt_6"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="7"
            android:id="@+id/bt_7"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="8"
            android:id="@+id/bt_8"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="9"
            android:id="@+id/bt_9"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="0"
            android:id="@+id/bt_0"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/centerBar">
        <Button
            android:layout_width="128dp"
            android:layout_height="96dp"
            android:text="Power"
            android:id="@+id/bt_Power"
            android:background="@drawable/button_power"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="128dp"
            android:layout_height="96dp"
            android:text="Menu"
            android:id="@+id/bt_Menu"
            android:onClick="RemoteButtonClick"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/rightSidebar">
        <Button
            android:layout_width="96dp"
            android:layout_height="192dp"
            android:text="P +"
            android:id="@+id/bt_ChUp"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Info"
            android:id="@+id/bt_Info"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="192dp"
            android:text="P -"
            android:id="@+id/bt_ChDown"
            android:onClick="RemoteButtonClick"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/rightSidebar"
        android:padding="32dp"
        android:columnCount="3">
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Up"
            android:id="@+id/bt_Up"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Left"
            android:id="@+id/bt_Left"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Enter"
            android:id="@+id/bt_Enter"
            android:onClick="RemoteButtonClick"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Right"
            android:id="@+id/bt_Right"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Down"
            android:id="@+id/bt_Down"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>
        <Button
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="Exit"
            android:id="@+id/bt_Exit"
            android:onClick="RemoteButtonClick"/>
        <Space
            android:layout_width="96dp"
            android:layout_height="96dp"/>

    </GridLayout>
    


</RelativeLayout>
